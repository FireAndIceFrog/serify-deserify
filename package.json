{
  "name": "@karmaniverous/serify-deserify",
  "version": "1.2.13",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karmaniverous/serify-deserify.git"
  },
  "author": "Jason G. Williscroft",
  "bugs": {
    "url": "https://github.com/karmaniverous/serify-deserify/issues"
  },
  "description": "Reversibly transform unserializable values into serializable ones.",
  "homepage": "https://github.com/karmaniverous/serify-deserify#readme",
  "keywords": [
    "bigint",
    "deserialize",
    "date",
    "json",
    "map",
    "parse",
    "redux",
    "serialize",
    "serializable",
    "set",
    "state",
    "stringify",
    "type"
  ],
  "license": "BSD-3-Clause",
  "dependencies": {
    "is-what": "^4.1.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-syntax-import-assertions": "^7.20.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/register": "^7.18.9",
    "@reduxjs/toolkit": "^1.8.2",
    "@types/node": "^18.11.17",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-extension": "^0.1.3",
    "babel-plugin-transform-inline-environment-variables": "^0.4.4",
    "chai": "^4.3.7",
    "concat-md": "^0.5.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.30.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-mocha": "^10.1.0",
    "jsdoc-to-markdown": "^8.0.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.1",
    "release-it": "^15.5.1",
    "rimraf": "^3.0.2"
  },
  "main": "lib/export/index.js",
  "mocha": {
    "exclude": [
      "./lib/**",
      "./node_modules/**"
    ],
    "require": [
      "@babel/register"
    ],
    "spec": "./**/*.test.!(*.*)"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    }
  },
  "scripts": {
    "lint": "eslint src/**",
    "test": "mocha",
    "build": "rimraf ./lib && babel src -d lib --config-file ./babel.build.js",
    "doc": "jsdoc2md -c doc/jsdoc.config.json -f src/**/*.* -t doc/api-template.hbs > doc/3-api.md && concat-md doc --hide-anchor-links > README.md",
    "package": "npm run lint && npm run test && npm run build && npm run doc",
    "release": "npm run package && dotenv -c -- release-it"
  }
}
